                <div class="progress-bar pa">
                    <img class="progress-ape" src="/images/ape.png">
                </div>
                <div class="progress-bar pb">
                    <img class="progress-ape" src="/images/ape.png">
                </div>
                <div class="progress-bar pc">
                    <img class="progress-ape" src="/images/ape.png">
                </div>
                <div class="progress-bar pd">
                    <img class="progress-ape" src="/images/ape.png">
                </div>
            </div>
            <p id="excerpt"></p>
            <br>
            <input type="text" id="text_input">
        </div>
    </body>
</html>